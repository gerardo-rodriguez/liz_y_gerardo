<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name, "Your Party Name (ex. Liz & Gerardo)" %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :username, "Your Party Username (you'll use this to login)" %><br />
  <%= f.text_field :username %></div>

<!--   <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>
 -->
  <div><%= f.label :password, "Your Party Password" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Password Confirmation" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
